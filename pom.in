<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.tc.mw</groupId>
  <artifactId>trident</artifactId>
  <version>1.1-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>trident</name>
  <url>http://maven.apache.org</url>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <jdk.version>1.7</jdk.version>
    <slf4j.version>1.7.7</slf4j.version>
    <commons.lang3.version>3.1</commons.lang3.version>
    <javassist.version>3.19.0-GA</javassist.version>
    <servlet.version>3.1.0</servlet.version>
    <activemq.version>5.10.0-tc</activemq.version>
    <xbean.version>3.7</xbean.version>
    <fastjson.version>1.2.3</fastjson.version>
  </properties>

  <distributionManagement>
    <repository>
      <id>HIS-DEV-releases</id>
      <name>HIS-DEV-releases</name>
      <url>http://10.1.18.74:8097/artifactory/libs-release-local</url>
    </repository>
    <snapshotRepository>
      <id>HIS-DEV-snapshots</id>
      <name>HIS-DEV-snapshots</name>
      <url>http://10.1.18.74:8097/artifactory/libs-snapshot-local</url>
    </snapshotRepository>
  </distributionManagement>


  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <version>${slf4j.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-lang3</artifactId>
      <version>${commons.lang3.version}</version>
    </dependency>
    <dependency>
      <groupId>org.javassist</groupId>
      <artifactId>javassist</artifactId>
      <version>${javassist.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.activemq</groupId>
      <artifactId>activemq-all</artifactId>
      <version>${activemq.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.xbean</groupId>
      <artifactId>xbean-spring</artifactId>
      <version>${xbean.version}</version>
    </dependency>
    <dependency>
      <groupId>com.alibaba</groupId>
      <artifactId>fastjson</artifactId>
      <version>${fastjson.version}</version>
    </dependency>
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>javax.servlet-api</artifactId>
      <version>${servlet.version}</version>
      <scope>provided</scope>
    </dependency>

    <!-- generated automatically:begin -->
#_DEPENDENCY_PLACEHOLDER_#
    <!-- generated automatically:end -->

  </dependencies>

  <build>
    <finalName>trident-${project.version}</finalName>
    <resources>
      <resource>
        <directory>${basedir}/src/main/config</directory>
        <excludes>
          <exclude>**/com.tc.trinity.core.spi.Configurable</exclude>
          <exclude>**/com.alibaba.dubbo.rpc.ProxyFactory</exclude>
        </excludes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-eclipse-plugin</artifactId>
        <version>2.9</version>
        <configuration>
          <sourceExcludes>
            <sourceExclude>**/TrinityConfiguration.java</sourceExclude>
            <sourceExclude>**/TridentProxyFactory.java</sourceExclude>
            <sourceExclude>**/TridentInvokerInvocationHandler.java</sourceExclude>
          </sourceExcludes>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>${jdk.version}</source>
          <target>${jdk.version}</target>
        </configuration>
        <executions>
          <execution>
            <id>default-compile</id>
            <phase>compile</phase>
            <goals>
              <goal>compile</goal>
            </goals>
            <configuration>
              <excludes>
                <exclude>**/TrinityConfiguration.java</exclude>
                <exclude>**/TridentProxyFactory.java</exclude>
                <exclude>**/TridentInvokerInvocationHandler.java</exclude>
              </excludes>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifestEntries>
              <Premain-Class>com.tc.trident.agent.TridentAgent</Premain-Class>
              <Can-Redefine-Classes>true</Can-Redefine-Classes>
              <Can-Retransform-Classes>true</Can-Retransform-Classes>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
